<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

<!--        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>-->
        <!-- android:windowLightStatusBar //реверсирует цвета статусбара
        <item name="android:windowTranslucentStatus">true</item>-->

    </style>


    <!-- //сплэш активити -->

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- прописан цвет кнопки назад на тулбаре. Она меняется в белой теме на синюю.  -->
    <style name="toolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/dark_background</item>
        <item name="titleTextColor">@color/dark_background</item>
        <item name="subtitleTextColor">@color/dark_background</item>
    </style>

    <!-- шрифт в тулбаре-->
    <style name="RobotoBoldTextAppearance">
        <item name="fontFamily">@font/my_font</item>
    </style>

    <style name="myCardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorCardBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">2dp</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="textPrimary">
        <item name="android:autoLink">phone</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textColorLink">@color/textColorLink</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="textSecondary">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textColorLink">@color/textColorLink</item>
    </style>


</resources>
